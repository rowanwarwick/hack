<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ManFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:src="@drawable/avatar"
        android:scaleType="centerCrop"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintTop_toBottomOf="@+id/image">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="name"
            android:textAlignment="viewStart" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/like_check"
            android:theme="@style/MyCheckBox" />

    </LinearLayout>

    <TextView
        android:id="@+id/field1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="field1"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/field1_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text field1"
        app:layout_constraintTop_toBottomOf="@+id/field1" />

    <TextView
        android:id="@+id/field2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="field2"
        app:layout_constraintTop_toBottomOf="@+id/field1_text" />

    <TextView
        android:id="@+id/field2_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text field2"
        android:ellipsize="start"
        android:maxLines="8"
        app:layout_constraintTop_toBottomOf="@+id/field2" />

    <TextView
        android:id="@+id/field3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="field3"
        app:layout_constraintTop_toBottomOf="@+id/field2_text" />

    <TextView
        android:id="@+id/field3_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text field3"
        app:layout_constraintTop_toBottomOf="@+id/field3" />

    <TextView
        android:id="@+id/field4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="field4"
        app:layout_constraintTop_toBottomOf="@+id/field3_text" />

    <TextView
        android:id="@+id/field4_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text field4"
        app:layout_constraintTop_toBottomOf="@+id/field4" />

</androidx.constraintlayout.widget.ConstraintLayout>