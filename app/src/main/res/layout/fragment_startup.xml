<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StartupFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:src="@drawable/avatar"
        android:scaleType="centerCrop"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintTop_toBottomOf="@+id/image">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="name"
            android:textAlignment="viewStart" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/like_check"
            android:theme="@style/MyCheckBox" />

    </LinearLayout>

    <TextView
        android:id="@+id/about_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="О проекте"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/info_about_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="place"
        app:layout_constraintTop_toBottomOf="@+id/about_project" />

    <TextView
        android:id="@+id/stage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Стадия инвестирования"
        app:layout_constraintTop_toBottomOf="@+id/info_about_project" />

    <TextView
        android:id="@+id/stage_investing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="этап инвестирования"
        android:ellipsize="start"
        android:maxLines="8"
        app:layout_constraintTop_toBottomOf="@+id/stage" />

    <TextView
        android:id="@+id/need_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Необходимая сумма"
        app:layout_constraintTop_toBottomOf="@+id/stage_investing" />

    <TextView
        android:id="@+id/how_much"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="информация"
        app:layout_constraintTop_toBottomOf="@+id/need_money" />

    <TextView
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Необходимая сумма"
        app:layout_constraintTop_toBottomOf="@+id/how_much" />

    <TextView
        android:id="@+id/more_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="веб-сайт"
        app:layout_constraintTop_toBottomOf="@+id/more" />

    <TextView
        android:id="@+id/made_this"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Основатели"
        app:layout_constraintTop_toBottomOf="@+id/more_info" />

    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:id="@+id/pager_speakers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/made_this" />

    <Button
        android:layout_width="match_parent"
        android:text="Связаться"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>